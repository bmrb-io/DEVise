#! /bin/csh -f

#TEMPTEMP -- make param for version?
set version = "1.7.19"
#TEMPTEMP -- make param for platform?
set platform = "linux"

mkdir build_$platform
cd build_$platform
mkdir src
cd src
tar xvfz ../../sources$version.tar.gz
scripts/setup
cd $platform
make
make strip
mv generic/collaborator ../../../collaborator_$platform
mv generic/devise ../../../devise_$platform
mv generic/deviseb ../../../deviseb_$platform
mv generic/devised ../../../devised_$platform
mv generic/generic ../../../generic_$platform
cd ../..
rm -rf src
