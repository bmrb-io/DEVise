CPPFLAGS = $(ARCH_FLAGS) -O -I../../graphics -I../../graphics.new \
	-I../../tape -Wall -Wno-unused -fexternal-templates

LIBSRC = binconv.C extract.C rectape.C

LIBOBJ = $(LIBSRC:.C=.o)

LIBNAME = libissm.a

all: $(LIBNAME)

$(LIBNAME): $(LIBOBJ)
	ar cr $@ $(LIBOBJ)
	ranlib $@

.PHONY: clean mostlyclean

clean: mostlyclean
	-rm $(RANLIB)

mostlyclean:
	-rm $(LIBOBJ)
