############################################################

#  $Id$

#  $Log$
#  Revision 1.2  1996/11/23 00:23:48  wenger
#  Incorporated all of the PostScript-related stuff into the client/server
#  library; added printing to PostScript to the example client and server;
#  made some fixes to PSDisplay, PSWindowRep, and XWindowRep classes as
#  a result of testing with client/server stuff.
#
#  Revision 1.1  1996/10/18 15:21:22  jussi
#  Initial revision.
#

############################################################

if (-d cslibtar) then
  echo Directory cslibtar exists already. Remove it and then rerun $0.
  exit 1
endif

echo Creating Client-Server Library tar files...

mkdir cslibtar
cd cslibtar
mkdir include
ln -s ../../graphics/Color.h ../../graphics/ColorMgr.h \
        ../../graphics/Compress.h ../../graphics/DList.h \
        ../../graphics/DevError.h ../../graphics/DevStatus.h \
        ../../graphics/DevisePixmap.h ../../graphics/DeviseTypes.h \
        ../../graphics/Display.h ../../graphics/Exit.h \
        ../../graphics/Geom.h ../../graphics/PSDisplay.h \
        ../../graphics/Pattern.h ../../graphics/Transform.h \
        ../../graphics/Util.h ../../graphics/VisualArg.h \
        ../../graphics/WindowRep.h ../../graphics/XBitmap.h \
        ../../graphics/XDisplay.h ../../graphics/XWindowRep.h \
        ../../graphics/Xdef.h ../../graphics/xv.h include \
	../../graphics/DualWindowRep.h include
ln -s ../../graphics.new/ClientAPI.h ../../graphics.new/DeviseKey.h \
        ../../graphics.new/MapIntToInt.h ../../graphics.new/ParseAPI.h \
        ../../graphics.new/Version.h ../../graphics.new/missing.h include
ln -s ../../tape/HashTable.h include
ln -s ../cslib/Makefile.com ../cslib/ClientServer.* \
        ../cslib/server.* ../cslib/client.* \
        ../cslib/opossum.* ../cslib/Readme.tex .

foreach platform (solaris solsparc sun hp)
  ln -s ../$platform/cslib/Makefile.dist Makefile
  ln -s ../$platform/cslib/libcs.a .
  tar cfvh ../cslib.$platform.tar .
  rm Makefile libcs.a
end

cd ..
rm -rf cslibtar

echo Done!

exit 1
