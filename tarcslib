############################################################

if (-d cslibtar) then
  echo Directory cslibtar exists already. Remove it and then rerun $0.
  exit 1
endif

echo Creating Client-Server Library tar files...

mkdir cslibtar
cd cslibtar
mkdir include
ln -s ../../graphics/Color.h ../../graphics/ColorMgr.h \
        ../../graphics/Compress.h ../../graphics/DList.h \
        ../../graphics/DevError.h ../../graphics/DevStatus.h \
        ../../graphics/DevisePixmap.h ../../graphics/DeviseTypes.h \
        ../../graphics/Display.h ../../graphics/Exit.h \
        ../../graphics/Geom.h \
        ../../graphics/Pattern.h ../../graphics/Transform.h \
        ../../graphics/VisualArg.h \
        ../../graphics/WindowRep.h \
	../../graphics/DualWindowRep.h include
ln -s ../../graphics.new/ClientAPI.h \
        ../../graphics.new/ParseAPI.h include
ln -s ../cslib/Makefile.com ../cslib/ClientServer.* \
        ../cslib/server.* ../cslib/client.* \
        ../cslib/opossum.* ../cslib/Readme.tex .

foreach platform (solaris solsparc sun hp)
  ln -s ../$platform/cslib/Makefile.dist Makefile
  ln -s ../$platform/cslib/libcs.a .
  tar cfvh ../cslib.$platform.tar .
  rm Makefile libcs.a
end

cd ..
rm -rf cslibtar

echo Done!

exit 1
