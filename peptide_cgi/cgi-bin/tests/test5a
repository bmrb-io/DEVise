#! /bin/csh -f

set result = 0

rm -r */4081* >& /dev/null

# Note: PDB ID 2CI2 is not the right PDB ID for this BMRB entry -- this
# is just for testing!

echo -n "Processing NMR-STAR: "
./s2d -nomail -bmrbid 4081 -force -check_res_list -check_pct
if ($status != 0) then
  echo "First invocation of s2d failed!"
  set result = 1
endif
mv tmp/s2d.out tmp/s2d.out1

echo -n "Processing chem shift ref: "
#TEMP -- I'm not sure about coord_index here -- it seems like it should
# be possible to do the csr stuff without processing the coordinates for the
# 3D visualization
./s2d -nomail -bmrbid 4081 -pdbid 2CI2 -coord_index 1 -do_csr 2 -force \
  -check_res_list -check_pct
if ($status != 0) then
  echo "Second invocation of s2d failed!"
  set result = 1
endif


echo "Checking output files"

#TEMP -- csr2.html, etc?
set files = (data_dir/4081ac1.dat data_dir/4081as1.dat data_dir/4081c1.dat \
	data_dir/4081csr1_1.dat data_dir/4081csr1_2.dat data_dir/4081csr1_3.dat \
	data_dir/4081csr1_4.dat \
	data_dir/4081d1.dat data_dir/4081hn1.dat data_dir/4081md.dat \
	data_dir/4081p1.dat data_dir/4081rc1.dat data_dir/4081rl.dat \
	html_dir/4081/4081ac1.html html_dir/4081/4081as1.html html_dir/4081/4081c1.html \
	html_dir/4081/4081csr1.html html_dir/4081/4081d1.html html_dir/4081/4081hn1.html \
	html_dir/4081/4081p1.html \
	html_dir/4081/4081y.html html_dir/4081/4081y_large.html \
	session_dir/4081/4081ac1.ds session_dir/4081/4081acdd session_dir/4081/4081as1.ds \
	session_dir/4081/4081c1.ds session_dir/4081/4081csr1.ds session_dir/4081/4081d1.ds \
	session_dir/4081/4081hn1.ds session_dir/4081/4081p1.ds \
	data_dir/4081hc1.dat \
	html_dir/4081/4081hc1.html \
	html_dir/4081/4081hc1_large.html \
	session_dir/4081/4081hc1.ds )

foreach file ($files)
  if (! -f $file) then
    echo "  Output file $file is missing"
    set result = 1
  endif
end


echo -n "Test5a result: "
if ($result == 0) then
  echo "OK"
  exit 0
else
  echo "FAILED"
  exit 1
endif
