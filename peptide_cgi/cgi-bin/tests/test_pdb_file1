#! /bin/csh -f

# Tests the new -pdb_file command-line argument.

#TEMP -- run this with the PDB file listed in the NMR-STAR file; then take the PDB file out of the STAR file and add it as a command-line argument -- the result should be the same...

set result = 0

rm -f */*/test_pdb_file1_out*
rm -f */.*/test_pdb_file1_out*

echo -n "Processing NMR-STAR and mmCIF: "
#TEMP -- get rid of do_pdb 2 -- -pdf_file should force that
./uvd -file test_data/test_pdb_file1.str -name test_pdb_file1_out -force \
  -check_pct -do_pdb 2
if ($status != 0) then
  echo "First invocation of uvd failed!"
  set result = 1
endif


echo "Checking output files"

set files = ( data_dir/uvd/test_pdb_file1_outac1.dat \
	data_dir/uvd/test_pdb_file1_outam1.dat \
	data_dir/uvd/test_pdb_file1_outamac1.dat \
	data_dir/uvd/test_pdb_file1_outas1.dat \
	data_dir/uvd/test_pdb_file1_outc1.dat \
	data_dir/uvd/test_pdb_file1_outd1.dat \
	data_dir/uvd/test_pdb_file1_outhc1.dat \
	data_dir/uvd/test_pdb_file1_outhn1.dat \
	data_dir/uvd/test_pdb_file1_outmd.dat \
	data_dir/uvd/test_pdb_file1_outp1.dat \
	data_dir/uvd/test_pdb_file1_outrc1.dat \
	data_dir/uvd/test_pdb_file1_outrl.dat \
	html_dir/uvd/test_pdb_file1_outac1.html \
	html_dir/uvd/test_pdb_file1_outac1_large.html \
	html_dir/uvd/test_pdb_file1_outam1.html \
	html_dir/uvd/test_pdb_file1_outam1_large.html \
	html_dir/uvd/test_pdb_file1_outas1.html \
	html_dir/uvd/test_pdb_file1_outas1_large.html \
	html_dir/uvd/test_pdb_file1_outc1.html \
	html_dir/uvd/test_pdb_file1_outc1_large.html \
	html_dir/uvd/test_pdb_file1_outd1.html \
	html_dir/uvd/test_pdb_file1_outd1_large.html \
	html_dir/uvd/test_pdb_file1_outhc1.html \
	html_dir/uvd/test_pdb_file1_outhc1_large.html \
	html_dir/uvd/test_pdb_file1_outhn1.html \
	html_dir/uvd/test_pdb_file1_outhn1_large.html \
	html_dir/uvd/test_pdb_file1_outp1.html \
	html_dir/uvd/test_pdb_file1_outp1_large.html \
	html_dir/uvd/test_pdb_file1_outy.html \
	html_dir/uvd/test_pdb_file1_outy_large.html \
	session_dir/.uvd/test_pdb_file1_outac1.ds \
	session_dir/.uvd/test_pdb_file1_outacdd \
	session_dir/.uvd/test_pdb_file1_outam1.ds \
	session_dir/.uvd/test_pdb_file1_outas1.ds \
	session_dir/.uvd/test_pdb_file1_outc1.ds \
	session_dir/.uvd/test_pdb_file1_outd1.ds \
	session_dir/.uvd/test_pdb_file1_outhc1.ds \
	session_dir/.uvd/test_pdb_file1_outhn1.ds \
	session_dir/.uvd/test_pdb_file1_outp1.ds )
	
foreach file ($files)
  if (! -f $file) then
    echo "  Output file $file is missing"
    set result = 1
  endif
end


echo -n "Test_pdb_file1 result: "
if ($result == 0) then
  echo "OK"
  exit 0
else
  echo "FAILED"
  exit 1
endif
