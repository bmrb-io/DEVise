############################################################

#  Set the modes of the files generated by s2d (there doesn't seem
#  to be a way to do this directly in Java).

############################################################

#  $Id$

############################################################

if ($#argv == 1) then
  set accNum = $1
else
  echo "Usage: set_modes <accession number>"
  exit
endif

set outfile = "tmp/set_modes.out"
if (-e $outfile) then
  rm $outfile
endif
echo set_modes arguments: $* > $outfile

chmod 644 data_dir/$accNum* session_dir/$accNum* html_dir/$accNum* \
  data_dir/vis_server/$accNum* session_dir/vis_server/$accNum* >>& $outfile
