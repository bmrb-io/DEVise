#
set database = /smart/indexed_colls/cacm.terms
set lib = /smart/package/lib

cat > index_spec << EOF1
database $database
current_ctype  0
    ctype_storage  vector
    ctype_stop  common_words
    ctype_stem  full
current_section  i
    section_parsing_method  begin
current_section  t
    section_parsing_method  full
    token_word  0
    token_proper_noun  0
current_section  a
    section_parsing_method  name
    token_word  0
current_section  b
current_section  w
    section_parsing_method  full
    token_word  0
    token_proper_noun  0
current_section  c
    section_parsing_method  full
    token_number  0
current_section  k
    section_parsing_method full
    token_word  0
    token_proper_noun  0
current_section  n
current_section  x
current_section  o
    section_parsing_method  end_doc

title_section  t
display_format %t\n%a\n%w\n%b\n%c\n%k\n
doc_weight_tf   none
doc_weight_coll none
doc_weight_norm none
query_weight_tf   none
query_weight_coll none
query_weight_norm none
EOF1

cat > ret_spec << EOF2
database $database
collection_sim inverted
EOF2

cat > fdbk_spec << EOF3
database $database
EOF3


smart_create $database << EOF
30011
index_spec
ret_spec
../cacm/pre_parser
../cacm/qry_spec
$lib/common_words

EOF
echo $cwd/../cacm/cacm.all | smart_enter $database
echo ../cacm/query.text | ../cacm/pre_parser | creat_index index_spec -n 1 \
	    | look_text index_spec query_coll $database/tf_query
rel_to_rr $database/qrels < ../cacm/qrels.text

mv $database/doc $database/tf_doc
mv $database/doc.var $database/tf_doc.var


time
