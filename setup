############################################################

cd run

if (! -d bin) then
  ln -s '@sys' bin
endif

if (! -d sunx86_54) then
  ln -s ../solaris sunx86_54
endif

if (! -d sun4m_54) then
  ln -s ../solsparc sun4m_54
endif

if (! -d sun4m_412) then
  ln -s ../sun sun4m_412
endif

if (! -d hp700_ux90) then
  ln -s ../hp hp700_ux90
endif

if (! -d rs_aix32) then
  ln -s ../aix rs_aix32
endif

ln -fs /p/devise/dat/*.idx . >& /dev/null
ln -fs /p/devise/dat/dsi94.dat . >& /dev/null

cd ../solsparc
ln -s ../solaris/Makefile . >& /dev/null
cd ../sun
ln -s ../solaris/Makefile . >& /dev/null
cd ../hp
ln -s ../solaris/Makefile . >& /dev/null
cd ../sgi
ln -s ../solaris/Makefile . >& /dev/null
cd ../linux
ln -s ../solaris/Makefile . >& /dev/null
cd ../aix
ln -s ../solaris/Makefile . >& /dev/null

cd ..
