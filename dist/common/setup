ln -s ../dist_sw/public/dat .
ln -s ../dist_sw/doc .
ln -s ../dist_sw/lib .
ln -s ../dist_sw/public/palette .
ln -s ../dist_sw/public/schema .
ln -s ../dist_sw/public/session .

mkdir tcl
cd tcl
cp -p /s/tcl7.4/lib/tcl7.4/* .
cd ..

mkdir tk
cd tk
cp -p /s/tcl7.4/lib/tk4.0/* .
cd ..

#TEMPTEMP? ln -s ../../dist_sw/run/devise.rc run
