#  subdirectory.

############################################################

#  $Id$

############################################################

ln -s ../common/README .
ln -s ../common/public .
ln -s ../common/doc .
ln -s ../common/lib .
ln -s ../common/run .

mkdir tcl
cp -p -r /usr/lib/tcl8.4/* tcl
rm -rf tcl/encoding
mkdir tk
cp -p -r /usr/lib/tk8.4/* tk
rm -rf tk/demos tk/images

mkdir bin
cd bin
../../scripts/setup.bin
cd ..

cd dyn_lib
./setup
cd ..

mkdir cache
