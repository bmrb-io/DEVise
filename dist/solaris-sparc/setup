#  Run this script to set up the linux-intel architecture-specific
#  subdirectory.

############################################################

#  $Id$

############################################################

ln -s ../common/README .
ln -s ../common/public .
ln -s ../common/doc .
ln -s ../common/lib .
ln -s ../common/run .

set here = `pwd`
mkdir tcl
ssh sparc1 "cp -p /s/tcl/lib/tcl8.3/* $here/tcl"

mkdir tk
ssh sparc1 "cp -p /s/tcl/lib/tk8.3/* $here/tk"

mkdir bin
cd bin
../../scripts/setup.bin
cd ..

cd dyn_lib
./setup
cd ..

mkdir cache
