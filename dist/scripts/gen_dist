#! /bin/csh -f

#  ========================================================================
#  DEVise Data Visualization Software
#  (c) Copyright 1992-2001
#  By the DEVise Development Group
#  Madison, Wisconsin
#  All Rights Reserved.
#  ========================================================================
#
#  Under no circumstances is this software to be copied, distributed,
#  or altered in any way without prior permission from the DEVise
#  Development Group.

#  Generate tar files for DEVise distribution.

############################################################

#  $Id$

############################################################

if ($#argv > 0) then
  set version = $1
else
  echo -n "Please enter DEVise version: "
  set version = $<
endif

set home = `pwd`

set target = /p/devise/ftp/Devise-$version

if ( -d $target) then
  echo "Distribution for DEVise version $version already exists."
  exit
else
  mkdir $target
endif


# set src = hpux-hppa
# set dest = $target/hpux-hppa.tar.gz
# cd $src
# tar cvfzhX $dest $home/scripts/tar_exclude .
# cd $home

set src = solaris-intel
set dest = $target/solaris-intel.tar.gz
cd $src
tar cvfzhX $dest $home/scripts/tar_exclude .
cd $home

set src = solaris-sparc
set dest = $target/solaris-sparc.tar.gz
cd $src
tar cvfzhX $dest $home/scripts/tar_exclude .
cd $home

# set src = sunos-sparc
# set dest = $target/sunos-sparc.tar.gz
# cd $src
# tar cvfzhX $dest $home/scripts/tar_exclude .
# cd $home

set src = linux-intel
set dest = $target/linux-intel.tar.gz
cd $src
tar cvfzhX $dest $home/scripts/tar_exclude .
cd $home

set src = html/devise
set dest = $target/quick_intro.tar.gz
cd $src
tar cvfzhX $dest $home/scripts/tar_exclude quick_intro
cd $home


echo ""
echo Done!
