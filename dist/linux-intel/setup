ln -s ../common/README .
ln -s ../common/dat .
ln -s ../common/doc .
ln -s ../common/lib .
ln -s ../common/palette .
ln -s ../common/run .
ln -s ../common/schema .
ln -s ../common/session .

mkdir tcl
cp -p /s/tcl/lib/tcl8.3/*.tcl tcl
mkdir tk
cp -p /s/tcl/lib/tk8.3/*.tcl tk

mkdir bin
cd bin
../../scripts/setup.bin
cd ..

cd dyn_lib
set dir = `pwd`
ssh pumori "cd $dir; ./setup"
cd ..

mkdir cache
