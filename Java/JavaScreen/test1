#! /bin/csh -f

############################################################

# $Id$

# Part of automatic testing -- test collaboration and most
# commands.

############################################################
 
# Start a collaboration leader
./js -collableadernameClbName1 -collableaderpassClbPW1 -autoplayback -clientlogclient_log.1 -playbackoriginal -screensize600x400 -cmdport6266 &

sleep 10
 
# Start a collaboration follower (we're not using the normal js script
# here so we can get the follower's PID)
unsetenv CLASSPATH
set javaexec = `cat bin2/java`
$javaexec -Xmx128M -cp .:Jmol.jar JavaScreen.js -collabnameClbName1 -collabpassClbPW1 -screensize600x400 -cmdport6266 &
set follower_id = $!

sleep 180

# Kill the follower
kill -9 $follower_id

# Check whether the leader process still alive
set js = `ps | grep js$`
if ("$js" != "") then
    echo "\nError found with JavaScreen. Please check logs."
    exit (1)
endif

exit (0)
