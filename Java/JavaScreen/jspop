#! /bin/csh -f

############################################################

# Start the jspop (JavaScreen Point of Presence).

#-----------------------------------------------------------

# $Id$

############################################################

# Set output file name according to ID string (if any).
set outfile = "jspop.out"
foreach arg ($argv[*])
  if ($arg == "-idregular") then
    set outfile = "jspop.out.regular"
    break
  else if ($arg == "-idsoil") then
    set outfile = "jspop.out.soil"
    break
  else if ($arg == "-idtest") then
    set outfile = "jspop.out.test"
    break
  endif
end

\rm -f $outfile
touch $outfile

nohup java jspop -debug $* >& $outfile &
