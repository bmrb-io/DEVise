if [ $# -gt 1 ]
then
  echo "Usage: check_jss [id_string]"
  exit 1
fi


#
# Check for the JSS itself.
#
pidfile="jss_pid.*.*"
if [ $# = 1 ]
then
  pidfile="jss_pid.$1.*"
fi

# Check for appropriate pid file to see if a jss process exists.
pids=`ls $pidfile 2> /dev/null | cut -d'.' -f3`

foundJss=0
if [ xxx = xxx$pids ]
then
  #echo "No JSS process found" 1>&2
  echo "needed for stupid sh if/else" > /dev/null
else
  foundJss=1
fi

#
# Check for DEVised(s).
#
pidfile="devised_pid.*.*"
if [ $# = 1 ]
then
  pidfile="devised_pid.$1.*"
fi

# Check for appropriate pid file to see if a devised process exists.
pids=`ls $pidfile 2> /dev/null | cut -d'.' -f3`

foundDevised=0
if [ xxx = xxx$pids ]
then
  #echo "No DEVised process found" 1>&2
  echo "needed for stupid sh if/else" > /dev/null
else
  foundDevised=1
fi

#
# Output the final check value.
#
curTime=`date`
if [ $foundJss != 1 ]
then
  echo "No JSS process found (at $curTime)" 1>&2
fi

if [ $foundDevised != 1 ]
then
  echo "No DEVised process found (at $curTime)" 1>&2
fi

if [ $foundJss = 1 -a $foundDevised = 1 ]
then
  echo "OK"
else
  echo "FAIL"
fi
