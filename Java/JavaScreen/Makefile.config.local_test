#-----------------------------------------------------------
# Directories for executables we need.

# BIN2 is for JSS and devised.
JAVA_BIN2 = /s/std/bin
PERL_BIN2 = /s/std/bin
XVFB_BIN2 = /s/std/bin

# BIN2P is for JSPoP.
JAVA_BIN2P = /s/std/bin
PERL_BIN2P = /s/std/bin

# BIN3 is for compiling.
JAVA_BIN3 = /s/std/bin

POP_DIR = ~/tst/jspop_install/jspop
SERV_DIR = ~/tst/jspop_install/jss
JAR_DIR = ~/tst/jspop_install/www
CGI_DIR = ~/tst/jspop_install/cgi-bin
IDSTR = "test"

# Where the DEVise sessions, schemas, etc., are installed.
DEVISE_VIS = /p/devise/demo

# This is who gets email about any errors.
ERROR_EMAIL = wenger

INSTALL_HOST = ""

# You should probably set this to 0 if you're running more than one JSS
# on the same machine.
KILL_XVFB = 1
