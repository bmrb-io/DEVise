#! /bin/csh -f

############################################################

# This file is just to get the path, etc., set up right to run check_jspop
# from cron.

# $Id$

############################################################

set path = ( /usr/ucb /bin /p/devise/run $path )

set outfile = /tmp/run_check.out

if (-e $outfile) then
    rm $outfile
endif

./check_jspop >& $outfile

# All this garbage because Sun's current crond on Intel/Solaris won't
# send mail correctly.
if (-e $outfile && ! -z $outfile) then
    /s/std/bin/cat $outfile | /usr/ucb/mail -s "Error message from check_jspop" `/s/std/bin/whoami`
endif

/usr/ucb/touch /tmp/normal_js_check
