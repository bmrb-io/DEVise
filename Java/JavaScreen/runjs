#!/bin/csh -f

\rm jspop.out
echo "launching jspop"
jspop -debug >& jspop.out &

sleep 15

\rm js.out
echo "launching JavaScreen"
js -debug >& js.out

echo "JavaScreen done; killing jspop and devised"
set pid=`ps -ax | grep 'java jspop' | head -1 | cut -c1-6`
kill $pid

set pid=`ps -ax | grep devised | head -1 | cut -c1-6`
kill -INT $pid
sleep 1
kill -INT $pid
sleep 1
kill -INT $pid
